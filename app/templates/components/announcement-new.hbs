{{#if addNewAnnouncement}}
  <div>
    <form>

      <div class="form-group">
        <label for="date">add a date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="text">add announcement text</label>
        {{input value=text id="text"}}
      </div>

      <button {{action 'saveAnnouncement'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>Add new announcement</button>
{{/if}}
